<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/chatFragment">

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.quickchat.presentation.screens.authorization.ContainerFragment.chat.mainChatPage.MainChatPageFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_main_chat_page">
        <action
            android:id="@+id/action_chatFragment_to_searchPageFragment"
            app:destination="@id/searchPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.quickchat.presentation.screens.authorization.ContainerFragment.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/searchPageFragment"
        android:name="com.example.quickchat.presentation.screens.authorization.ContainerFragment.chat.searchPage.SearchPageFragment"
        android:label="fragment_search_page"
        tools:layout="@layout/fragment_search_page" />

</navigation>